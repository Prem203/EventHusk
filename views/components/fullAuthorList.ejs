<h2>Events</h2>

<% if (events.length > 0) { %>
  <div class="row g-3">
    <% for (let event of events) { %>
    <div class="col-4">
      <div class="card p-1">
        <h5 class="card-title"><%= event.eventName %></h5>
        <div class="card-text">
          <div>Description: <%= event.eventDescription %></div>
          <div>Date: <%= event.date %> </div>
          <div>Time: <%= event.time %></div>
          <div>
            <a
              class="btn btn-outline-primary"
              href="<%= '/authors/' + event.eventID + '/edit' %>"
              >Edit</a
            >
            <a
              class="btn btn-outline-danger"
              href="<%= '/authors/' + event.eventID + '/delete' %>"
              >Delete</a
            >
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
<% } else { %>
  <div class="alert alert-warning">No events found for this page.</div>
<% } %>

<%- include("./pagination.ejs", { baseUrl: '/authors', currentPage, lastPage }) %>
