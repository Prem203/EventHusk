<h2></h2>

<form
  action=" <%= '/references/' + ref.venueID + '/edit' %>"
  method="POST"
>
  <div>
    <label class="form-label">
      Venue Name:
      <input
        class="form-control"
        type="text"
        name="venueName"
        value="<%= ref.venueName %>"
      />
    </label>
  </div>
  <div>
    <label class="form-label">
      Location:
      <input
        class="form-control"
        type="text"
        name="location"
        value="<%= ref.location %>"
      />
    </label>
  </div>

  <div>
    <label class="form-label">
      Capacity:
      <input
        class="form-control"
        type="text"
        name="capacity"
        value="<%= ref.capacity %>"
      />
    </label>
  </div>

  <div>
    <label class="form-label">
      Policies:
      <input
        class="form-control"
        type="text"
        name="policies"
        value="<%= ref.policies %>"
      />
    </label>
  </div>

  <div>
    <label class="form-label">
      Availability Status:
      <input
        class="form-control"
        type="text"
        name="availabilityStatus"
        value="<%= ref.availabilityStatus %>"
      />    
    </label>  
  </div>

  <div>
    <label class="form-label">
      Person Responsible:
      <input
        class="form-control"
        type="text"
        name="personResponsible"
        value="<%= ref.personResponsible %>"
      />
        
  </div>


  <button type="submit" class="btn btn-primary">Edit</button>
  <a
    class="btn btn-danger"
    href="<%= '/references/' + ref.venueID + '/delete' %>"
    >Delete</a
  >
</form>
