<br />
<h2>Venue Listings</h2>
<% if (references.length === 0) { %>
<div class="alert alert-primary">No venues found</div>
<% } %>
<div class="row g-3">
  <% for (let ref of references) { %>

  <div class="col-4">
    <div class="card p-1">
      <h5 class="card-title"><%= ref.venueName %></h5>
      <div class="card-text">
        <div>Location: <%= ref.location %></div>
        <div>Capacity: <%= ref.capacity %></div>
        <div>Policies: <%= ref.policies %></div>
        <div>Status: <%= ref.availabilityStatus %></div>
        <br />
        <div><i>For further inquiries contact <%= ref.personResponsible %></i></div>
        <div>
          <a
            class="btn btn-outline-primary"
            href="<%= '/references/' + ref.reference_id + '/edit' %>"
            >Edit</a
          >
          <a
            class="btn btn-outline-danger"
            href="<%= '/references/' + ref.reference_id + '/delete' %>"
            >Delete</a
          >
        </div>
      </div>
    </div>
  </div>

  <% } %> <%- include("./pagination.ejs", { currentPage, lastPage }) %>
</div>
